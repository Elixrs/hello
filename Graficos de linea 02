import pandas as pd
from matplotlib import pyplot as plt

df = pd.read_csv('/datasets/sbux.csv')
cols = ['open', 'close']

df.plot(x='date',
        y=['open', 'close'],
        title='Historic SBUX price',
        rot=50,
        legend=False,
        xlabel='Date',
        ylabel='Share price / USD',
        )

plt.show()

