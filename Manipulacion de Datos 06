import pandas as pd

df = pd.read_csv('/datasets/vg_sales.csv')
df = df[df['year_of_release'] >= 2000]

df_pivot = df.pivot_table(index='genre', columns='year_of_release',
                          values='jp_sales', aggfunc='mean')  # escribe tu código aquí

print(df_pivot)  # escribe tu código aquí

