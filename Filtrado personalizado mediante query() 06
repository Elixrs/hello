import pandas as pd

df = pd.read_csv('/datasets/vg_sales.csv')

cols = ['name', 'genre']
s_genres = ['Shooter', 'Simulation', 'Sports', 'Strategy']

df_filtered = (df.query('genre not in @s_genres')[['name', 'genre']])[cols]
# Filtra los g√©neros usando query() y not in

print(df_filtered)

