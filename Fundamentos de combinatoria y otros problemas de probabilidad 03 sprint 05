from math import factorial

tasks = 10  # introduce aquÃ­ el nÃºmero de tareas
# calcula aquÃ­ el nÃºmero total de secuencias de tareas posibles
permutations = factorial(tasks)
# calcula aquÃ­ la probabilidad de seleccionar la Ãºnica combinaciÃ³n ganadora
probability = 1 / permutations

print(probability)

# resultado : 2.755731922398589e-07

