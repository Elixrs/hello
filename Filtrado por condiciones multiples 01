import pandas as pd

df = pd.read_csv('/datasets/vg_sales.csv')
df['user_score'] = pd.to_numeric(df['user_score'], errors='coerce')

df_filtered = df[(df['year_of_release'] >= 1980) &
                 (df['year_of_release'] < 1990)]

print(df_filtered.head(5))

