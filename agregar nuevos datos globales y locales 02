# Diccionario global que representa los niveles de inventario actuales
inventory = {
    'manzana': 50,
    'pl치tano': 30,
    'naranja': 20
}

# Muestra el inventario inicial
print("Inventario inicial:", inventory)


# Funci칩n para quitar stock
def remove_stock(product, quantity):  # remove para quitar stocks
    global inventory
    if product in inventory:
        if inventory[product] >= quantity:
            inventory[product] -= quantity
            print(  # este print ayuda a imprimir que se quito del stock
                f"Se quita(n) {quantity} {product}(s). Nuevo inventario: {inventory[product]}")
            if inventory[product] == 0:
                print(f"El producto '{product}' se ha agotado.")
        else:
            print(
                f"Stock insuficiente de {product}. No se puede(n) quitar {quantity} {product}(s).")
    else:
        print(
            f"El producto {product} no existe en el inventario. No se puede quitar el stock.")


# Realiza operaciones de stock
remove_stock('pl치tano', 10)    # Quitar 20 pl치tanos
remove_stock('naranja', 25)    # Intentar quitar 25 naranjas
remove_stock('uva', 50)        # Quitar 50 uvas
