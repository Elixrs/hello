import pandas as pd

column_names = [
    'country',
    'name',
    'capacity_mw',
    'latitude',
    'longitude',
    'primary_fuel',
    'owner'
]
data = pd.read_csv(
    '/datasets/gpp_modified.csv',
    sep='|',
    header=None,
    names=column_names,
    decimal=',',
)

print(data.head())  # metodo .head() para mostar las primeras columnas.
print()

# data.sample() puede mostras el numero de columnas que ingreses en el () "(10)ejemplo"
data.sample(5)
print(data.sample)
